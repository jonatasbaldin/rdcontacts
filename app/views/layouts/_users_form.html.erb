<div class="center jumbotron">
  <h1><%= @form_params[:head_title] %></h1>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
      <%= form_for @user, url: @form_params[:form_path], method: @form_params[:form_method] do |form| %>
        <%= render 'shared/error_messages' %>

        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>

        <%= form.label :lastname %>
        <%= form.text_field :lastname, class: 'form-control' %>

        <%= form.label :email %>
        <%= form.email_field :email, class: 'form-control' %>

        <%= form.label :password %>
        <%= form.password_field :password, class: 'form-control' %>

        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, class: 'form-control' %>

        <p><%= form.submit @form_params[:submit_message], class: "btn btn-lg btn-success" %></p>
      <% end %>

      <% if @form_params[:form_method] == :patch %>
        <p><%= link_to "Delete me", user_path(session_logged_user), method: "delete", data: { confirm: "Are you sure? All your data will be lost!" } %></p>
      <% end %>
      </div>
    </div>
</div>
