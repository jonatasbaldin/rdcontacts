<div class="center jumbotron">
  <h1><%= @form_params[:head_title] %></h1>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
      <%= form_for @contact, url: @form_params[:form_path], method: @form_params[:form_method] do |form| %>
        <%= render 'shared/error_messages' %>

        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>

        <%= form.label :lastname %>
        <%= form.text_field :lastname, class: 'form-control' %>

        <%= form.label :email %>
        <%= form.email_field :email, class: 'form-control' %>

          <%# Prototype of how custom fields info should be edited%>
          <%#= form.fields_for :custom_field_info do |cfi| %>
              <%#= cfi.label :data %>
              <%#= cfi.text_field :data, class: 'form-control' %>
          <%# end %>

        <p><%= form.submit @form_params[:submit_message], class: "btn btn-lg btn-success" %></p>
      <% end %>
      </div>
    </div>
</div>

