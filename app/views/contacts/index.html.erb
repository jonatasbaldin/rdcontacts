<div class="center jumbotron">

  <h1>Your Contacts</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <table class="table">
        <thead>
          <th>Name</th>
          <th>Lastname</th>
          <th>Email</th>
            <% @custom_f.each do |cf| %>
              <th> <%= cf.name %> </th>
            <% end %>
        </thead>
        <tbody>
          <% @contact.each do |co| %>
          <tr>
              <td> <%= co.name %> </td>
              <td> <%= co.lastname %> </td>
              <td> <%= co.email %> </td>
            <% @custom_f.each do |cf| %>
                <% @custom_field_info.each do |cfi| %>
                  <% if cfi.contact_id == co.id && cfi.custom_field_id == cf.id %>
                      <td> <%= cfi.data %> </td>
                  <% end %>
                <% end %>
            <% end %>
              <td> <%= link_to "Edit", edit_user_contact_path(session_logged_user.id, co.id) %> </td>
              <td> <%= link_to "Delete", user_contact_path(session_logged_user.id, co.id), method: "delete", data: { confirm: "Are you sure?" } %> </td>
          </tr>
          <% end %>
        </tbody>
      </table>
        <p><%= link_to "Add new contact", new_user_contact_path(session_logged_user), class: "btn btn-lg btn-success" %></p>
    </div>
  </div>
</div>


